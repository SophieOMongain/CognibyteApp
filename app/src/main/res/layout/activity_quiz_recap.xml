<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizRecapActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomePage.Recap.QuizRecapActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B0CDE4"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="QUIZ RECAPS"
            android:textColor="#0D2C54"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:padding="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelectChapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select chapter"
        android:textColor="#0D2C54"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp" />

    <Spinner
        android:id="@+id/spinnerChapter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/tvSelectChapter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSelectQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select quiz"
        android:textColor="#0D2C54"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spinnerChapter"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp" />

    <Spinner
        android:id="@+id/spinnerLesson"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/tvSelectQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSelectLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select language"
        android:textColor="#0D2C54"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spinnerLesson"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp" />
    <Spinner
        android:id="@+id/spinnerLanguage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/tvSelectLanguage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvSelectSkillLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select skill level"
        android:textColor="#0D2C54"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/spinnerLanguage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp" />

    <Spinner
        android:id="@+id/spinnerSkillLevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/tvSelectSkillLevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvQuizRecapLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Questions:"
        android:textStyle="bold"
        android:textColor="#0D2C54"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/spinnerSkillLevel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp" />

    <ScrollView
        android:id="@+id/scrollQuizRecap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuizRecapLabel"
        app:layout_constraintBottom_toTopOf="@id/btnViewQuizRecap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/tvQuizRecap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#F1F5F7"
            android:textColor="#4A4A4A"
            android:textSize="14sp"
            android:text="Quiz questions will appear here..."
            android:lineSpacingExtra="6dp" />
    </ScrollView>

    <Button
        android:id="@+id/btnViewQuizRecap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Quiz Recap"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D2C54"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
