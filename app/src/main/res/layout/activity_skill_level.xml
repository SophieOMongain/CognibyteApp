<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEF2F5"
    android:gravity="center_horizontal">

    <!-- Exact Top Section with Blue Background -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="SET SKILL LEVEL"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#003366"
        android:background="#b3d9ff" />

    <!-- Space between header and slider -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <!-- SeekBar with BEGINNER to EXPERT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical">

        <!-- BEGINNER label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEGINNER"
            android:textSize="12sp"
            android:textColor="#003366"
            android:layout_marginEnd="10dp"/>

        <!-- SeekBar -->
        <SeekBar
            android:id="@+id/skill_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="2"
            android:progress="0"
            android:thumbTint="#b3d9ff"
            android:progressTint="#003366"/>

        <!-- EXPERT label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXPERT"
            android:textSize="12sp"
            android:textColor="#003366"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <!-- INTERMEDIATE centered below the SeekBar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INTERMEDIATE"
        android:textSize="12sp"
        android:textColor="#003366"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"/>

    <!-- Level Selected Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level Selected:"
        android:textSize="18sp"
        android:textColor="#003366"
        android:layout_marginBottom="10dp"/>

    <!-- Grey box to display selected level -->
    <TextView
        android:id="@+id/skill_level_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#003366"
        android:background="#808080"
        android:padding="12dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#808080"
        android:gravity="center"/>

    <!-- Save Changes Button -->
    <Button
        android:id="@+id/btn_save_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE CHANGES"
        android:textStyle="bold"
        android:textColor="#b3d9ff"
        android:backgroundTint="#b3d9ff"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/rounded_button_background"
        android:layout_marginTop="20dp"/>

</LinearLayout>
