<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".Admin.GenerateChapterQuizActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Chapter Quizzes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnChapter1Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Chapter 1 Quizzes"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnChapter2Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Chapter 2 Quizzes"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnChapter3Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Chapter 3 Quizzes"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnChapter4Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Chapter 4 Quizzes"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnBackToAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Admin Panel"
        android:padding="12dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
