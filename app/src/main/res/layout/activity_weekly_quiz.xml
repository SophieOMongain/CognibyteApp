<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tvWeeklyCoding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/secondary_blue"
        android:text="WEEKLY CODING"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/primary_blue"
        android:fontFamily="monospace"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvQuiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/secondary_blue"
        android:text="QUIZ"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/primary_blue"
        android:fontFamily="monospace"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvWeeklyCoding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Buttons Section -->
    <Button
        android:id="@+id/btnStartWeeklyQuiz"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Start weekly\nquliz"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:paddingVertical="16dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:fontFamily="monospace"
        android:lineSpacingMultiplier="1.2"
        app:layout_constraintTop_toBottomOf="@id/tvQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnViewWeeklyRecap"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="View Weekly\nRecap"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_disabled"
        android:paddingVertical="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:fontFamily="monospace"
        android:lineSpacingMultiplier="1.2"
        app:layout_constraintTop_toBottomOf="@id/btnStartWeeklyQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/secondary_blue"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/btnCodeQuiz"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/code_icon2"
            android:contentDescription="Code Quiz"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:contentDescription="Profile"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/settings"
            android:contentDescription="Settings"
            android:scaleType="centerInside"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>