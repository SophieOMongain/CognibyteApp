<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_generate_chapters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_grey">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/secondary_blue"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Generate Content"
            android:textColor="@color/primary_blue"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerLanguage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/text_grey"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etChapterTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Chapter Title"
        android:inputType="text"
        android:background="@color/text_grey"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerLanguage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etChapterNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Chapter Number (1–5)"
        android:inputType="number"
        android:background="@color/text_grey"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etChapterTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etLessonTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Lesson Title"
        android:inputType="text"
        android:background="@color/text_grey"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etChapterNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etLessonNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Lesson Number (1–5)"
        android:inputType="number"
        android:background="@color/text_grey"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/etLessonTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Lesson Description"
        android:inputType="textMultiLine"
        android:background="@color/text_grey"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etLessonNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnGenerateContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Generate Content"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/secondary_blue"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnViewContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Content"
        android:textStyle="bold"
        android:backgroundTint="@color/secondary_blue"
        android:textColor="@color/primary_blue"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnGenerateContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
